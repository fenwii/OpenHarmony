    sources = [ ]
    if (board_name == "hi3518ev300") {
        sources += [
            "init_liteos_a_3518ev300.cfg",
        ]
    }

    if (board_name == "hi3516dv300") {
        sources += [
            "init_liteos_a_3516dv300.cfg",
        ]
    }

    outputs = [
        "$target_out_dir/config/init.cfg"
    ]
}